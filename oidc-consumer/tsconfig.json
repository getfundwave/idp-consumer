{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "types": [ "node", "jest" ],
  },
  "include": ["./src/**/*", "./test/*.ts"],
  "exclude": ["node_modules", "dist"]
}
